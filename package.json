{
  "name": "construction-docs-generator",
  "version": "2.0.0",
  "description": "인테리어 착공도서 자동생성 시스템 - Interior Construction Document Auto Generator",
  "main": "public/index.html",
  "scripts": {
    "start": "npx http-server public -p 3000 -c-1",
    "dev": "npx http-server public -p 3000 -c-1 --cors",
    "build": "echo 'Static files ready for deployment' && echo 'Build completed successfully'",
    "prebuild": "echo 'Preparing build...'",
    "postbuild": "echo 'Build verification completed'",
    "test": "echo 'No tests specified yet'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:install": "playwright install",
    "deploy": "vercel --prod",
    "deploy:dev": "vercel",
    "preview": "vercel --prod --confirm",
    "clean": "echo 'Cleaning temporary files...'",
    "validate": "echo 'Validating project structure...' && ls -la public/"
  },
  "keywords": [
    "interior-design",
    "construction-documents",
    "powerpoint-generation",
    "excel-parsing",
    "korean"
  ],
  "author": "Construction Document Generator Team",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.55.1",
    "pptxgenjs": "^3.12.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/construction-docs/generator.git"
  },
  "bugs": {
    "url": "https://github.com/construction-docs/generator/issues"
  },
  "homepage": "https://construction-docs-generator.vercel.app"
}
